
@{
    ViewBag.Title = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student</h2>

<table id="demo" lay-filter="test"></table>
<div id="demo7"></div>
<script src="/layui/layui.js"></script>
<script>
    layui.use('table', function () {
        var table = layui.table;
        //第一个实例
        table.render({
            elem: '#demo'
            , url: '/StudentSys/GetTable' //数据接口
            , where: { data: 1 }
            , page: true //开启分页
            , limit: 3
            , limits: [2, 3, 10]
            , cols: [[ //表头
                  { field: 'ID', title: 'ID', width: 80, sort: true, fixed: 'left' }
                , { field: 'Name', title: '姓名', width: 80 }
                , { field: 'Sex', title: '性别', width: 80, sort: true }
                , { field: 'Class', title: '班级', width: 135, sort: true }
                , { field: 'Phone', title: '电话', width: 80 }
                , { field: 'BronDate', title: '出生日期', width: 177 }
                , { field: 'QQ', title: 'QQ', width: 80, sort: true }
                , { field: 'Email', title: '邮箱', width: 80, sort: true }
                , { field: 'ImagePath', title: '头像', width: 80 }
            ]],
            parseData: function (res) { //将原始数据解析成 table 组件所规定的数据
                debugger
                return {
                    "code": res.code, //解析接口状态
                    "msg": res.msg, //解析提示文本
                    "count": res.count, //解析数据长度
                    "data": res.data //解析数据列表
                };
            },
            request: {
                page: 'page', // 页码的参数名称，默认：page
               limit: 'size' //每页数据量的参数名，默认：limit
            },
        });
       
    });
</script>